    if (Session["ShoppingCartName"] != null)
    {
        try
        {
            shoppingCart = Session["ShoppingCartName"] as ShoppingCart;
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
    }

    if (shoppingCart == null)
    {
        shoppingCart = new ShoppingCart();
    }
}

